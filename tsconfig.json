{
  "compilerOptions": {
    "target": "ES2020", // Use modern JS features
    "module": "ESNext", // ESM modules (for `import`)
    "moduleResolution": "Node", // How modules get resolved
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true,
    "outDir": "./dist", // Where compiled JS files go
    "rootDir": "./src", // Where your source files are
    "resolveJsonModule": true, // So you can import JSON files
    "noEmit": false,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src"
  ], // Include only your source code
  "exclude": [
    "node_modules",
    "dist"
  ] // Exclude these folders
}
